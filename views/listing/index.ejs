<% layout("/layouts/boilerplate") %> 

<style>
    #filters {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
    }
    .filter {
        text-align: center;
        margin-right: 2rem;
        margin-top: 2rem;
        opacity: 0.8;
    }
    .filter:hover {
        opacity: 1;
        cursor: pointer;
    }
    .filter p {
        font-size: 0.8rem;
    }
    .tax-info {
        display: none;
    }
    .tax-toggle {
        border: 2px solid black;
        border-radius: 1rem;
        height: 2.5rem;
        padding: 1rem;
        margin-left: 1rem;
        display: flex;
        align-items: center;
    }
</style>
                <h3>All listings</h3>

    
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for(let listing of allListing) { %>
            <a href="/listings/<%= listing._id %>" class="l-link">

                <div class="card listing-card col">
                        <img class="card-img-top"  style="height: 20rem;" src="<%= listing.image.url %>" alt="listing_image">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text">
                                <b><%= listing.title %></b><br>
                                &#8377;<%= listing.price.toLocaleString("en-IN") %>
                                <i class="tax-info">&nbsp; &nbsp;+18% GST</i>
                            </p>
                        </div> 
                    </div>    
            </a>
            <% } %>
        </div>
         
    

